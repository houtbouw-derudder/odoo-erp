<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- top menu item-->
	<menuitem name="Sales" id="menu_main_sales" web_icon="hdr_sales,static/description/icon.png" sequence="70"/>

	<record model="ir.ui.view" id="quotations_view_tree">
		<field name="name">hdr_sales.quotation.tree</field>
		<field name="model">hdr_sales.quotation</field>
		<field name="arch" type="xml">
			<tree string="Quotations">
				<field name="name" />
				<field name="date" />
				<field name="partner_id" />
				<field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'validated'"/>
			</tree>
		</field>
	</record>

	<record id="open_view_quotations_all" model="ir.actions.act_window">
		<field name="name">Quotations</field>
		<field name="res_model">hdr_sales.quotation</field>
		<field name="domain">[]</field>
		<field name="view_mode">tree,form</field>
		<field name="target">main</field>
		<!-- <field name="search_view_id" ref="geodynamics.view_geodynamics_postcalculation_search" /> -->
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">No quotations found. Let's create one!</p>
		</field>
	</record>

	<record model="ir.actions.act_window.view" id="open_view_quotations_all_tree">
		<field name="sequence" eval="1"/>
		<field name="view_mode">tree</field>
		<field name="view_id" ref="quotations_view_tree"/>
		<field name="act_window_id" ref="open_view_quotations_all"/>
	</record>

	<menuitem action="open_view_quotations_all" id="menu_quotations" name="Quotations" parent="menu_main_sales" sequence="1"/>
</odoo>